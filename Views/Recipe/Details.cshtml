@model Exam.Models.RecipeEntry

@{
    ViewData["Title"] = "Recipe Details";
}

<h2>Recipe Details</h2>

<div class="card">
    <div class="card-header">
        @Model.Name
    </div>
    <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text">@Model.Description</p>

        <h5 class="card-title">Cooking Time</h5>
        <p class="card-text">@Model.CookingTime minutes</p>

        <h5 class="card-title">Ingredients</h5>
        <p class="card-text">@Model.Ingredients</p>

        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <img src="@Model.ImageURL" alt="@Model.Name" class="img-thumbnail" />
        }
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.RecipeId" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.RecipeId" class="btn btn-danger">Delete</a>
    </div>
</div>

@model Exam.Models.RecipeEntry

@{
    ViewData["Title"] = "Delete Recipe";
}

<h2>Are you sure you want to delete this recipe?</h2>

<div>
    <h4>@Model.Name</h4>
    <p>@Model.Description</p>
    <p>Cooking Time: @Model.CookingTime minutes</p>
    @if (!string.IsNullOrEmpty(Model.ImageURL))
    {
        <img src="@Model.ImageURL" alt="@Model.Name" style="max-width: 200px;" />
    }
    <p>Ingredients: @Model.Ingredients</p>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken() <!-- Add Anti-Forgery Token -->
    <input type="hidden" asp-for="RecipeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
